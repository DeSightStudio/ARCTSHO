{%- comment -%}
  Breadcrumb Section
  Erstellt eine mehrschichtige Breadcrumb-Navigation für verschiedene Seitentypen
  Unterstützt: Collection Pages, Produktseiten, reguläre Seiten, Blog-Artikel
{%- endcomment -%}

{%- liquid
  assign show_breadcrumbs = true
  assign current_template = template | split: '.' | first

  # Breadcrumbs auf bestimmten Seiten ausblenden
  if template == 'index' or template == 'cart' or template == 'list-collections' or template == '404'
    assign show_breadcrumbs = false
  endif

  # Wenn Section-Setting zum Ausblenden gesetzt ist
  if section.settings.hide_breadcrumbs
    assign show_breadcrumbs = false
  endif
-%}

{%- if show_breadcrumbs -%}
  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div
      class="breadcrumb-section page-width"
      style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
    >
      <nav
        class="breadcrumbs"
        role="navigation"
        aria-label="{{ 'general.breadcrumbs.aria_label' | t | default: 'Breadcrumbs' }}"
      >
        <ol class="breadcrumbs__list">
          {%- comment -%} Home Link {%- endcomment -%}
          <li class="breadcrumbs__item">
            <a class="breadcrumbs__link" href="/">
              {%- if section.settings.home_text != blank -%}
                {{ section.settings.home_text }}
              {%- else -%}
                {{ 'general.breadcrumbs.home' | t | default: 'Home' }}
              {%- endif -%}
            </a>
          </li>

          {%- comment -%} Template-spezifische Breadcrumbs {%- endcomment -%}
          {%- case current_template -%}
            {%- when 'page' -%}
              <li class="breadcrumbs__item">
                <a class="breadcrumbs__link" href="{{ page.url }}" aria-current="page">
                  {{ page.title }}
                </a>
              </li>

            {%- when 'product' -%}
              {%- comment -%} Zeige Collection falls verfügbar {%- endcomment -%}
              {%- if collection.url and section.settings.show_collection_in_product -%}
                <li class="breadcrumbs__item">
                  <a class="breadcrumbs__link" href="{{ collection.url }}">
                    {{ collection.title }}
                  </a>
                </li>
              {%- elsif product.collections.size > 0 and section.settings.show_collection_in_product -%}
                {%- assign first_collection = product.collections.first -%}
                <li class="breadcrumbs__item">
                  <a class="breadcrumbs__link" href="{{ first_collection.url }}">
                    {{ first_collection.title }}
                  </a>
                </li>
              {%- endif -%}

              <li class="breadcrumbs__item">
                <a class="breadcrumbs__link" href="{{ product.url }}" aria-current="page">
                  {{ product.title }}
                </a>
              </li>

            {%- when 'collection' -%}
              {%- if current_tags and section.settings.show_tags_in_collection -%}
                <li class="breadcrumbs__item">
                  <a class="breadcrumbs__link" href="{{ collection.url }}">
                    {{ collection.title }}
                  </a>
                </li>
                <li class="breadcrumbs__item">
                  {%- capture tag_url -%}{{ collection.url }}/{{ current_tags | join: "+" }}{%- endcapture -%}
                  <a class="breadcrumbs__link" href="{{ tag_url }}" aria-current="page">
                    {{ current_tags | join: ' + ' }}
                  </a>
                </li>
              {%- else -%}
                <li class="breadcrumbs__item">
                  <a class="breadcrumbs__link" href="{{ collection.url }}" aria-current="page">
                    {{ collection.title }}
                  </a>
                </li>
              {%- endif -%}

            {%- when 'blog' -%}
              {%- if current_tags and section.settings.show_tags_in_blog -%}
                <li class="breadcrumbs__item">
                  <a class="breadcrumbs__link" href="{{ blog.url }}">
                    {{ blog.title }}
                  </a>
                </li>
                <li class="breadcrumbs__item">
                  {%- capture tag_url -%}{{ blog.url }}/tagged/{{ current_tags | join: "+" }}{%- endcapture -%}
                  <a class="breadcrumbs__link" href="{{ tag_url }}" aria-current="page">
                    {{ current_tags | join: ' + ' }}
                  </a>
                </li>
              {%- else -%}
                <li class="breadcrumbs__item">
                  <a class="breadcrumbs__link" href="{{ blog.url }}" aria-current="page">
                    {{ blog.title }}
                  </a>
                </li>
              {%- endif -%}

            {%- when 'article' -%}
              <li class="breadcrumbs__item">
                <a class="breadcrumbs__link" href="{{ blog.url }}">
                  {{ blog.title }}
                </a>
              </li>
              <li class="breadcrumbs__item">
                <a class="breadcrumbs__link" href="{{ article.url }}" aria-current="page">
                  {{ article.title }}
                </a>
              </li>

            {%- else -%}
              {%- comment -%} Fallback für andere Templates {%- endcomment -%}
              <li class="breadcrumbs__item">
                <a class="breadcrumbs__link" href="{{ request.path }}" aria-current="page">
                  {{ page_title }}
                </a>
              </li>
          {%- endcase -%}
        </ol>
      </nav>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Breadcrumb",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Allgemeine Einstellungen"
    },
    {
      "type": "checkbox",
      "id": "hide_breadcrumbs",
      "default": false,
      "label": "Breadcrumbs ausblenden"
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Text für Home-Link",
      "default": "Home",
      "info": "Leer lassen für automatische Übersetzung"
    },
    {
      "type": "header",
      "content": "Anzeige-Optionen"
    },
    {
      "type": "checkbox",
      "id": "show_collection_in_product",
      "default": true,
      "label": "Collection in Produkt-Breadcrumbs anzeigen"
    },
    {
      "type": "checkbox",
      "id": "show_tags_in_collection",
      "default": true,
      "label": "Tags in Collection-Breadcrumbs anzeigen"
    },
    {
      "type": "checkbox",
      "id": "show_tags_in_blog",
      "default": true,
      "label": "Tags in Blog-Breadcrumbs anzeigen"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farbschema",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Abstände"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb"
    }
  ]
}
{% endschema %}
