{%- comment -%}
  Back Button Section
  Erstellt einen intelligenten "Zurück"-Button der zur zuletzt besuchten Seite oder zur Startseite navigiert
{%- endcomment -%}

{%- liquid
  assign show_back_button = true

  if section.settings.hide_on_homepage and template == 'index'
    assign show_back_button = false
  endif

  if section.settings.hide_back_button
    assign show_back_button = false
  endif
-%}

{%- if show_back_button -%}
  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div
      class="back-button-section page-width"
      style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
    >
      <div class="back-button-container">
        <button
          type="button"
          class="back-button button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
          data-back-button
          aria-label="{{ 'general.back_button.aria_label' | t | default: 'Zurück zur vorherigen Seite' }}"
        >
          {%- if section.settings.show_icon -%}
            <span class="back-button__icon" aria-hidden="true">←</span>
          {%- endif -%}
          <span class="back-button__text">
            {%- if section.settings.button_text != blank -%}
              {{ section.settings.button_text }}
            {%- else -%}
              {{ 'general.back_button.text' | t | default: 'Zurück' }}
            {%- endif -%}
          </span>
        </button>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Zurück Button",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "hide_back_button",
      "default": false,
      "label": "Zurück-Button ausblenden"
    },
    {
      "type": "checkbox",
      "id": "hide_on_homepage",
      "default": true,
      "label": "Auf Startseite ausblenden"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button-Text",
      "default": "Zurück",
      "info": "Leer lassen für automatische Übersetzung"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "default": true,
      "label": "Pfeil-Icon anzeigen"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "default": false,
      "label": "Sekundärer Button-Stil"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farbschema",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Abstand"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Zurück Button"
    }
  ]
}
{% endschema %}
