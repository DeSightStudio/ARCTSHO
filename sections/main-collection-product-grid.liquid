{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <!-- Product form functionality is now in dist.js -->
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {% comment %}
    KEINE PAGINIERUNG - Alle Produkte werden auf einer Seite geladen (max 250 pro Shopify Limit)
    Sortierung: NEW → NORMAL → SOLD
  {% endcomment %}
  {%- paginate collection.products by 250 -%}
    <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %}">
      {{ 'component-facets.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

      <!-- Cart state management and card functionality is now in dist.js -->
      {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
        <aside
          aria-labelledby="verticalTitle"
          class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
          id="main-collection-filters"
          data-id="{{ section.id }}"
        >
          {% render 'facets',
            results: collection,
            enable_filtering: section.settings.enable_filtering,
            enable_sorting: section.settings.enable_sorting,
            filter_type: section.settings.filter_type,
            paginate: paginate
          %}
        </aside>
      {%- endif -%}

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer"
        data-products-per-page="{{ section.settings.products_per_page }}"
        data-total-products="{{ collection.all_products_count }}"
        data-current-page="{{ paginate.current_page }}"
        data-total-pages="{{ paginate.pages }}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {%- if collection.all_products_count == 0 -%}
                  {{- 'sections.collection_template.no_products_in_category' | t -}}
                {%- else -%}
                  {{ 'sections.collection_template.empty' | t -}}
                  <br>
                  {{
                    'sections.collection_template.use_fewer_filters_html'
                    | t: link: collection.url, class: 'underlined-link link'
                  }}
                {%- endif -%}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div
            class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
          >
            <div class="loading-overlay gradient"></div>

            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              data-collection-size="{{ collection.all_products_count }}"
              class="
                grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                grid--{{ section.settings.columns_desktop }}-col-desktop
                {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
              "
            >
              {% assign skip_card_product_styles = false %}

              {% comment %}
                VEREINFACHTE 3-PHASEN-SORTIERUNG (keine Paginierung mehr!)
                Alle Produkte werden auf einer Seite geladen (max 250 durch Shopify Limit)

                Phase 1: NEU Produkte (< 5 Tage alt, verfügbar)
                Phase 2: NORMALE Produkte (≥ 5 Tage alt, verfügbar, sortiert nach Preis)
                Phase 3: SOLD Produkte (< 5 Tage nach sold-out-timestamp)

                KRITISCH: Ein Produkt kann NIEMALS gleichzeitig NEU und SOLD sein!
              {% endcomment %}

              {% comment %} Berechne Konstanten für Badge-Logik {% endcomment %}
              {% assign now_seconds = 'now' | date: '%s' | plus: 0 %}
              {% assign five_days_seconds = 432000 %}
              {% assign animation_counter = 0 %}

              {% comment %} PHASE 1: Zeige NEU Produkte (< 5 Tage alt, verfügbar) {% endcomment %}
              {%- for product in collection.products -%}
                {% if product.available %}
                  {% assign product_created_seconds = product.created_at | date: '%s' | plus: 0 %}
                  {% assign product_age_seconds = now_seconds | minus: product_created_seconds %}

                  {% if product_age_seconds <= five_days_seconds %}
                    {% comment %} KRITISCH: Certificate of Origin (SKU 2226) niemals in Produktlisten anzeigen {% endcomment %}
                    {% unless product.selected_or_first_available_variant.sku == '2226'
                      or product.id == 9124358062294
                    %}
                      {% assign animation_counter = animation_counter | plus: 1 %}
                      {% assign lazy_load = false %}
                      {%- if animation_counter > 2 -%}
                        {%- assign lazy_load = true -%}
                      {%- endif -%}
                      <li
                        class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                        {% if settings.animations_reveal_on_scroll %}
                          data-cascade
                          style="--animation-order: {{ animation_counter }};"
                        {% endif %}
                      >
                        {% render 'card-product',
                          card_product: product,
                          media_aspect_ratio: section.settings.image_ratio,
                          image_shape: section.settings.image_shape,
                          show_secondary_image: section.settings.show_secondary_image,
                          show_vendor: section.settings.show_vendor,
                          show_rating: section.settings.show_rating,
                          lazy_load: lazy_load,
                          show_weight: true,
                          skip_styles: skip_card_product_styles,
                          quick_add: section.settings.quick_add,
                          section_id: section.id
                        %}
                      </li>
                      {%- assign skip_card_product_styles = true -%}
                    {% endunless %}
                  {% endif %}
                {% endif %}
              {%- endfor -%}

              {% comment %} PHASE 2: Zeige NORMALE Produkte (≥ 5 Tage alt, verfügbar, sortiert nach Preis) {% endcomment %}
              {% assign normal_products = collection.products | where: 'available', true | sort: 'price' | reverse %}
              {%- for product in normal_products -%}
                {% assign product_created_seconds = product.created_at | date: '%s' | plus: 0 %}
                {% assign product_age_seconds = now_seconds | minus: product_created_seconds %}

                {% if product_age_seconds > five_days_seconds %}
                  {% comment %} KRITISCH: Certificate of Origin (SKU 2226) niemals in Produktlisten anzeigen {% endcomment %}
                  {% unless product.selected_or_first_available_variant.sku == '2226' or product.id == 9124358062294 %}
                    {% assign animation_counter = animation_counter | plus: 1 %}
                    {% assign lazy_load = false %}
                    {%- if animation_counter > 2 -%}
                      {%- assign lazy_load = true -%}
                    {%- endif -%}
                    <li
                      class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ animation_counter }};"
                      {% endif %}
                    >
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        lazy_load: lazy_load,
                        show_weight: true,
                        skip_styles: skip_card_product_styles,
                        quick_add: section.settings.quick_add,
                        section_id: section.id
                      %}
                    </li>
                    {%- assign skip_card_product_styles = true -%}
                  {% endunless %}
                {% endif %}
              {%- endfor -%}

              {% comment %} PHASE 3: Zeige SOLD Produkte (< 5 Tage nach sold-out-timestamp) {% endcomment %}
              {%- for product in collection.products -%}
                {% if product.available == false %}
                  {% comment %} KRITISCH: Certificate of Origin (SKU 2226) niemals in Produktlisten anzeigen {% endcomment %}
                  {% unless product.selected_or_first_available_variant.sku == '2226' or product.id == 9124358062294 %}
                    {% assign sold_timestamp = product.metafields.custom['sold-out-timestamp'] %}
                    {% assign show_sold = false %}

                    {% if sold_timestamp != blank %}
                      {% assign sold_timestamp_seconds = sold_timestamp | date: '%s' | plus: 0 %}
                      {% assign sold_age_seconds = now_seconds | minus: sold_timestamp_seconds %}
                      {% if sold_age_seconds <= five_days_seconds %}
                        {% assign show_sold = true %}
                      {% endif %}
                    {% endif %}

                    {% if show_sold %}
                      {% assign animation_counter = animation_counter | plus: 1 %}
                      {% assign lazy_load = false %}
                      {%- if animation_counter > 2 -%}
                        {%- assign lazy_load = true -%}
                      {%- endif -%}
                      <li
                        class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                        {% if settings.animations_reveal_on_scroll %}
                          data-cascade
                          style="--animation-order: {{ animation_counter }};"
                        {% endif %}
                      >
                        {% render 'card-product',
                          card_product: product,
                          media_aspect_ratio: section.settings.image_ratio,
                          image_shape: section.settings.image_shape,
                          show_secondary_image: section.settings.show_secondary_image,
                          show_vendor: section.settings.show_vendor,
                          show_rating: section.settings.show_rating,
                          lazy_load: lazy_load,
                          show_weight: true,
                          skip_styles: skip_card_product_styles,
                          quick_add: section.settings.quick_add,
                          section_id: section.id
                        %}
                      </li>
                      {%- assign skip_card_product_styles = true -%}
                    {% endif %}
                  {% endunless %}
                {% endif %}
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 960,
      "step": 12,
      "default": 24,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__3.content"
    },
    {
      "type": "select",
